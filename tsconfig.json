{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "bin",
  },
  "include": ["src", "typings"],
  "exclude": [
    "node_modules"
  ]
}
